package vo;

/**
 * codeup 문제
 * 3117
 * 2016
 * 3129
 * 
 * 스택구현해서 깃헙에 올리기
 * @author LG
 *
 */
public class Stack {

	private Object[] stack;
	private int ARRAY_LENGTH_UNIT = 100;
	private int TOP;
	
	public Stack() {
		super();
		this.stack = new Object[100];
		this.TOP = -1;
	}

	public void push(Object newElement) {
		if (TOP%100 == 99) {
			System.out.println("push curIndex : " + TOP);
			Object[] newStack = new Object[TOP+101];
			System.arraycopy(stack, 0, newStack, 0, TOP);
			stack = newStack;
			stack[++TOP] = newElement;
		}
		else {
			stack[++TOP] = newElement;
		}
		System.out.println("push\ntop : "+TOP+"\narray length: "+stack.length);
	}
	
	public Object pop() {
		if (TOP == -1)
			throw new IndexOutOfBoundsException();
		
		Object result = stack[TOP--];
		if (TOP%100 == 99) {
			System.out.println("pop curIndex : " + TOP);
			Object[] newStack = new Object[TOP-100];
			System.arraycopy(stack, 0, newStack, 0, TOP);
			stack = newStack;
		}
		System.out.println(result);
		return result;
	}
	
	public int size() {
		return TOP;
	}
	
	public void printCurStack() {
		for (Object obj : stack) {
			System.out.println(obj.toString());
		}
	}
}

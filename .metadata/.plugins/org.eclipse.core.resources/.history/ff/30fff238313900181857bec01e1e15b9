package vo;

/**
 * codeup 문제
 * 3117
 * 2016
 * 3129
 * 
 * 스택구현해서 깃헙에 올리기
 * @author LG
 *
 */
public class Stack {

	private Object[] stack;
	private int arrayLengthUnit = 100;
	private int top;
	
	public Stack() {
		super();
		this.stack = new Object[100];
		this.top = -1;
	}

	public void push(Object newElement) {
		if (top%arrayLengthUnit == arrayLengthUnit-1) {
			System.out.println("push curIndex : " + top);
			Object[] newStack = new Object[top+arrayLengthUnit+1];
			System.arraycopy(stack, 0, newStack, 0, top);
			stack = newStack;
			stack[++top] = newElement;
		}
		else {
			stack[++top] = newElement;
		}
		System.out.println("------\npush\ntop : "+top+"\narray length: "+stack.length+"\n------");
	}
	
	public Object pop() {
		if (top == -1)
			throw new IndexOutOfBoundsException();
		
		Object result = stack[top--];
		if (top%100 == 99) {
			System.out.println("pop curIndex : " + top);
			Object[] newStack = new Object[top-100];
			System.arraycopy(stack, 0, newStack, 0, top);
			stack = newStack;
		}
		System.out.println("------\npop\ntop : "+top+"\narray length: "+stack.length+"\n------");
		return result;
	}
	
	public int size() {
		return top+1;
	}
	
	public void printCurStack() {
		for (Object obj : stack) {
			System.out.println(obj.toString());
		}
	}
}
